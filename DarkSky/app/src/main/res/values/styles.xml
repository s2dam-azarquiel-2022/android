<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="secondaryInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">@color/darken</item>
        <item name="android:paddingTop">@dimen/layoutPaddingSmall</item>
        <item name="android:paddingBottom">@dimen/layoutPaddingSmall</item>
        <item name="android:paddingStart">@dimen/layoutPaddingBig</item>
        <item name="android:paddingEnd">@dimen/layoutPaddingBig</item>
        <item name="android:layout_marginStart">@dimen/layoutMarginSmall</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/font_awesome</item>
        <item name="android:layout_marginStart">@dimen/layoutMarginSmall</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>
</resources>